{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir" : "output",
    "baseUrl": "tsconfig",
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es5", "es6", "es7", "dom", "es2015", "es2020"],
    "paths": {
      "cs-ng-admin-area/*": [
        "public/cs-ng-admin-area/*"
      ],
      "cs-ng-comms/*": [
        "public/cs-ng-comms/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "typings",
    "output",
    "**/*.spec.ts",
    "public/apps/*"
  ]
}
